{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": [
            "warn",
            "backtick"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-const": [
            "off"
        ],
        "no-var": [
            "error"
        ],
        "spaced-comment": [
            "error"
        ],
        "no-trailing-spaces": [
            "warn"
        ],
        "no-unreachable-loop": [
            "error"
        ],
        "no-unreachable": [
            "error"
        ],
        "no-unused-vars": [
            "error"
        ],
        "@typescript-eslint/explicit-function-return-type": [
            "error"
        ],
        "prefer-arrow-callback": [
            "error"
        ],
        "no-whitespace-before-property": [
            "warn"
        ],
        "comma-dangle": [
            "error"
        ],
        "no-tabs": [
            "error" // Fight me, Spaces > Tabs
        ]
    }
}
